{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2017", "dom"],
    "noImplicitAny": true,
    "declaration": false,
    "suppressImplicitAnyIndexErrors": true
  },
  "angularCompilerOptions": {
    "debug": true,
    "skipMetadataEmit": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/snippets/*.ts",
    "e2e",
    "test"
  ]
}
