{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2017", "dom"],
    "baseUrl": "./",
    "noImplicitAny": true,
    "declaration": false,
    "suppressImplicitAnyIndexErrors": true,
    "paths": {
      "@ux-aspects/ux-aspects/*": [
        "./src"
      ],
      "@ux-aspects/ux-aspects": [
        "./src"
      ]
    }
  },
  "angularCompilerOptions": {
    "skipMetadataEmit": true,
    "preserveWhitespaces": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/snippets/*.ts",
    "e2e",
    "test",
    "**/*.spec.ts"
  ]
}
