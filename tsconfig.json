{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "declaration": false,
    "suppressImplicitAnyIndexErrors": true
  },
  "angularCompilerOptions": {
    "debug": true,
    "skipMetadataEmit": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/snippets/*.ts",
    "**/e2e/**/*.ts",
    "test"
  ]
}
